! =========================
! ======== FONTS ==========
! =========================

! =========================
! ======= ST =======
Xft.dpi:            96
Xft.antialias:      true
/* *.font:             Liberation Mono:style=Regular:size=15; */
Xft.hinting:        true
Xft.rgba:           rgb
Xft.autohint:       false
Xft.hintstyle:      hintfull
Xft.lcdfilter:      lcddefault

! =========================
! ======== COLORS =========
! =========================

! Not available at the moment

! =========================


! ========================
! ======== Urxvt =========
! disable the scrollbar
URxvt.scrollBar: false

! ----Extensions----
URxvt.perl-ext-common:  default,matcher,resize-font,clipboard
! matcher
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1URxvt.clipboard.autocopy: true
! resize-font
URxvt.resize-font.smaller: C-j
URxvt.resize-font.smaller: C-k
! clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
