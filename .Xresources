! =========================
! ======== FONTS ==========
! =========================

! =========================
! ======== URxvt ==========
Xft.dpi:            96
Xft.antialias:      true
URxvt.font:         xft:UbuntuMono Nerd Font:size=15, \
                    xft:Inconsolata Nerd Font Mono:size=15, \
                    xft:DefaVuSansMono Nerd Font:size=15, \
                    xft:DroidSansMono Nerd Font:size=15, \
                    xft:FuraMono Nerd Font:size=15, \
                    xft:RobotoMono Nerd Font:size=15, \
                    xft:Noto Sans Mono:size=15, \
                    xft:Monospace:style=Medium:antialias=false
Xft.hinting:        true
Xft.rgba:           rgb
Xft.autohint:       false
Xft.hintstyle:      hintfull
Xft.lcdfilter:      lcddefault

! =========================
! ======= XTerm ===========
! =========================
Xft.dpi:            96
Xft.antialias:      true
XTerm.vt100.locale: true
XTerm.vt100.faceName:       xft:UbuntuMono Nerd Font:size=15, \
                            xft:Monospace:style=Medium:antialias=false
XTerm.vt100.faceSize: 9
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?
Xft.hinting:        true
Xft.rgba:           rgb
Xft.autohint:       false
Xft.hintstyle:      hintfull
Xft.lcdfilter:      lcddefault

! =========================
! ======== COLORS =========
! =========================

*background:    #181818
*foreground:	#dcdcdc
*cursorColor:	#dcdcdc
*color0:	#3f3f3f
*color1:	#705050
*color2:	#60b48a
*color3:	#dfaf8f
*color4:	#9ab8d7
*color5:	#dc8cc3
*color6:	#8cd0d3
*color7:    #dcdcdc
*color8:	#709080
*color9:	#dca3a3
*color10:	#60b48a
*color11:	#f0dfaf
*color12:	#94bff3
*color13:	#ec93d3
*color14:	#93e0e3
*color15:	#ffffff


! disable the scrollbar
URxvt.scrollBar: false

! ----Extensions----
URxvt.perl-ext-common:  default,matcher,resize-font,clipboard
! matcher
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1URxvt.clipboard.autocopy: true
! resize-font
URxvt.resize-font.smaller: C-j
URxvt.resize-font.smaller: C-k
! clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
